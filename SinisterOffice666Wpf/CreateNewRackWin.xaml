<Window x:Class="SinisterOffice666Wpf.CreateNewRackWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SinisterOffice666Wpf"
        mc:Ignorable="d"
        Title="CreateNewRackWin" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Название"/>
            <TextBox Text="{Binding Title}"/>
            <TextBlock Text="Год покупки"/>
            <TextBox Text="{Binding YearBuy}"/>
            <TextBlock Text="Кол-во использований"/>
            <TextBox Text="{Binding UseCount}"/>
            <TextBlock Text="Макс. ол-во использований"/>
            <TextBox Text="{Binding CurrentCount}"/>
            <TextBlock Text="Ответственный"/>
            <TextBlock Text="{Binding SelectedDevil.Nick}"/>
            <ComboBox ItemsSource="{Binding Devils}" SelectedItem="{Binding SelectedDevil}"/>
            <Button Content="Сохранить" Width="150" Margin="30" />
        </StackPanel>
    </Grid>
</Window>
